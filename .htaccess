<IfModule mod_rewrite.c>
	RewriteEngine on
	RewriteCond %{REQUEST_FILENAME} -d
		RewriteRule ^(.*[^/])$ $1/ [R=301,L]
	RewriteCond %{REQUEST_FILENAME} -d
		RewriteRule ^photos/(.*)$ ?rewrite=1&dir=$1 [QSA,B,END]
	RewriteRule ^small/(.*)$ getimage.php?mode=small&filename=photos/$1 [QSA,B,L]
	RewriteRule ^thumb/(.*)$ getimage.php?mode=thumb&filename=photos/$1 [QSA,B,L]
	RewriteCond %{QUERY_STRING} "^dir=([^&]*)(|&(.*))$"
		RewriteRule ^$ photos/%1?%3 [R=301,L]
	RewriteCond %{QUERY_STRING} !"rewrite=1"
		RewriteRule ^$ photos/ [R=301,L]
</IfModule>
